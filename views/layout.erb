<html> 
	<head>
		<title>PlayGround - <%= @page %> </title>
		<link rel='stylesheet' href="/css/bootstrap1.css" />
		<link rel='stylesheet' href="/css/style.css" />
		<script type="text/javascript" src="/js/jquery-1.10.1.js"></script>
		<script type="text/javascript" src="/js/bootstrap.js"></script>
		<script type="text/javascript" src="/js/script.js"></script>

	</head>

	<body>
		<div class="container">
			<div class="row">
				<div class="span8 offset2">
					<h1>PlayGround Website </h1>

					<!-- Global Nav Bar -->
					<nav class="navbar">
					<div class="navbar-inner">			
						<ul class="nav">
							<li <%= "class=\"active\"" if @page == "Home" %>><a href="/">Home</a></li>
							<li <%= "class=\"active\"" if @page == "Movies" %>> <a href="/Movies/">Movies</a> </li>
							<li <%= "class=\"active\"" if @page == "Stocks" %>> <a href="/Stocks/">Stocks</a> </li>
							<li <%= "class=\"active\"" if @page == "Images" %>> <a href="/Images/">Images</a> </li>
						</ul>
					</div>
					</nav>
					<!-- End global nav bar --> 
				</div>
			</div>
			<div class="row">
				<div class="span8 offset2">
					<%= yield %>
				</div>
			</div>
		</div> 
	</body>
</html>
